<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập và Đăng ký</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="public/css/login.css">
</head>

<body>

    <div class="container">
        <!-- Left: Form section -->
        <div class="form-container">
            <i class="fas fa-arrow-left back-icon" onclick="historyBack()"></i>

            <!-- Login Form -->
            <form id="login-form" class="active" action="/auth/login" method="POST">
                <h2>Đăng nhập</h2>
                <div class="form-group">
                    <i class="fas fa-envelope"></i>
                    <input type="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="password" required>
                </div>
                <button type="submit" class="btn"><i class="fas fa-sign-in-alt"></i>Đăng nhập</button>
                <a href="/auth/google" class="btn btn-google btn-block">
                    <i class="fab fa-google"></i> Đăng nhập với Google
                </a>

                <span class="switch" onclick="toggleForms()">Bạn chưa có tài khoản? Đăng ký ngay</span>
            </form>


            <!-- Registration Form -->
            <form id="registration-form" class="d-none" action="/auth/register" method="POST"
                onsubmit="return validatePassword()">
                <h2>Tạo tài khoản</h2>
                <div class="form-group">
                    <i class="fas fa-user"></i>
                    <input type="text" name="name" placeholder="Tên" required> <!-- Đặt thuộc tính "name" cho input -->
                </div>
                <div class="form-group">
                    <i class="fas fa-envelope"></i>
                    <input type="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="password" placeholder="Mật khẩu" required>
                </div>
                <div class="form-group">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="confirmPassword" placeholder="Nhập lại mật khẩu" required>
                    <!-- Đặt thuộc tính "name" cho input -->
                </div>
                <button type="submit" class="btn"><i class="fas fa-user-plus"></i>Đăng ký</button>
                <span class="switch" onclick="toggleForms()">Bạn đã có tài khoản? Đăng nhập</span>
            </form>

        </div>

        <!-- Right: Image section -->
        <div class="image-section">
            <div class="logo-text">TourTrek</div>
        </div>
    </div>

    <script src="public/js/login.js"></script>
</body>

</html>